<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.map.joseph.ordaringonline">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:label="Register"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LogIn"
            android:label="@string/login"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".MainMenu"
            android:label="@string/home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainOffersActivity"
            android:label="Offers"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainOrdersActivity"
            android:background="#e6e6e6"
            android:label="My Orders"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SelectAreaActivity"
            android:label="@string/select_area"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainChatActivity"
            android:label="@string/title_activity_main_chat"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainShareActivity"
            android:label="@string/title_activity_main_share"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainAboutUsActivity"
            android:label="@string/title_activity_main_about_us"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SelectCityActivity"
            android:label="@string/select_city"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CategoryActivity"
            android:label="@string/select_category"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SelectMarketActivity"
            android:label="@string/select_market"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EmptyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MarketActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProductActivity"
            android:label="Product Details"
            android:screenOrientation="portrait" />
        <activity android:name=".BasketActivity"
            android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>